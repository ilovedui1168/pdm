    <script>
        // Toggle select all checkboxes
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('tbody input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });
        
        // Modal functionality
        const modal = document.getElementById('editModal');
        const editButtons = document.querySelectorAll('.edit-btn');
        const closeModal = document.querySelector('.close-modal');
        const notification = document.getElementById('notification');
        const notificationText = document.getElementById('notificationText');
        
        function showNotification(message, isSuccess = true) {
            notificationText.textContent = message;
            notification.style.backgroundColor = isSuccess ? 'var(--success)' : 'var(--danger)';
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        editButtons.forEach(button => {
            button.addEventListener('click', function() {
                modal.style.display = 'flex';
            });
        });
        
        closeModal.addEventListener('click', function() {
            modal.style.display = 'none';
        });
        
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
        
        // Profit calculator functionality
        document.getElementById('calculateBtn').addEventListener('click', function() {
            const markup = parseFloat(document.getElementById('markupPercentage').value) || 0;
            const cost = parseFloat(document.getElementById('costPrice').value) || 0;
            const fulfillment = parseFloat(document.getElementById('fulfillmentCost').value) || 0;
            
            const totalCost = cost + fulfillment;
            const resalePrice = totalCost * (1 + markup/100);
            const profit = resalePrice - totalCost;
            const profitMargin = (profit / resalePrice) * 100;
            
            document.getElementById('resalePrice').textContent = '$' + resalePrice.toFixed(2);
            
            const profitMarginEl = document.getElementById('profitMargin');
            profitMarginEl.textContent = '$' + profit.toFixed(2) + 
                ' (' + profitMargin.toFixed(1) + '%)';
            
            if (profitMargin > 25) {
                profitMarginEl.className = 'profit-positive';
            } else {
                profitMarginEl.className = 'profit-negative';
            }
        });
        
        // Table sorting functionality
        const table = document.getElementById('productsTable');
        const headers = table.querySelectorAll('th[data-sort]');
        let sortDirection = 1;
        let currentSort = null;
        
        headers.forEach(header => {
            header.addEventListener('click', function() {
                const sortBy = this.getAttribute('data-sort');
                sortTable(sortBy);
            });
        });
        
        function sortTable(sortBy) {
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            
            // Toggle sort direction if clicking the same column
            if (currentSort === sortBy) {
                sortDirection = -sortDirection;
            } else {
                sortDirection = 1;
                currentSort = sortBy;
            }
            
            rows.sort((a, b) => {
                const aValue = a.cells[getColumnIndex(sortBy)].textContent;
                const bValue = b.cells[getColumnIndex(sortBy)].textContent;
                
                // Handle numeric values
                if (sortBy === 'cost' || sortBy === 'resalePrice' || sortBy === 'fulfillmentCost') {
                    const aNum = parseFloat(aValue.replace('$', ''));
                    const bNum = parseFloat(bValue.replace('$', ''));
                    return (aNum - bNum) * sortDirection;
                }
                
                // Handle dates
                if (sortBy === 'costDate' || sortBy === 'lastUpdated') {
                    return (new Date(aValue) - new Date(bValue)) * sortDirection;
                }
                
                // Default to string comparison
                return aValue.localeCompare(bValue) * sortDirection;
            });
            
            // Remove existing rows
            while (tbody.firstChild) {
                tbody.removeChild(tbody.firstChild);
            }
            
            // Add sorted rows
            rows.forEach(row => tbody.appendChild(row));
        }
        
        function getColumnIndex(columnName) {
            const headers = Array.from(table.querySelectorAll('th[data-sort]'));
            return headers.findIndex(header => header.getAttribute('data-sort') === columnName) + 1;
        }
        
        // Export to CSV functionality
        document.getElementById('exportBtn').addEventListener('click', function() {
            // Create CSV content
            let csvContent = "EAN,SKU,Title,Cost,Supplier,Link,Cost Date,Last Updated,Resale Price,Fulfillment Cost,Profit\n";
            
            // Get all table rows
            const rows = document.querySelectorAll('#productsTable tbody tr');
            
            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                
                // Skip the checkbox and actions columns
                const rowData = [
                    cells[1].textContent,
                    cells[2].textContent,
                    cells[3].textContent,
                    cells[4].textContent.replace('$', ''),
                    cells[5].textContent,
                    cells[6].querySelector('a') ? cells[6].querySelector('a').href : '',
                    cells[7].textContent,
                    cells[8].textContent,
                    cells[9].textContent.replace('$', ''),
                    cells[10].textContent.replace('$', ''),
                    cells[11].textContent.replace('$', '')
                ];
                
                // Escape any commas in the data
                const escapedData = rowData.map(cell => {
                    if (cell.includes(',')) {
                        return `"${cell}"`;
                    }
                    return cell;
                });
                
                csvContent += escapedData.join(',') + '\n';
            });
            
            // Create a Blob with the CSV data
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            
            // Create a download link and trigger it
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', 'product_database_export.csv');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Show notification
            showNotification('CSV exported successfully!');
        });
        
        // Button functionality
        document.getElementById('importBtn').addEventListener('click', function() {
            alert('CSV import functionality would be implemented');
        });
        
        document.getElementById('resetBtn').addEventListener('click', function() {
            if (confirm('Are you sure you want to reset all changes?')) {
                showNotification('All changes have been reset');
            }
        });
        
        document.getElementById('applyFilters').addEventListener('click', function() {
            showNotification('Filters applied successfully');
        });
        
        document.getElementById('clearFilters').addEventListener('click', function() {
            document.getElementById('searchInput').value = '';
            document.getElementById('supplierFilter').value = '';
            document.getElementById('priceRange').value = '';
            showNotification('Filters cleared');
        });
        
        document.getElementById('editSelectedBtn').addEventListener('click', function() {
            const selected = document.querySelectorAll('tbody input[type="checkbox"]:checked');
            if (selected.length > 0) {
                modal.style.display = 'flex';
                showNotification(`Editing ${selected.length} selected products`);
            } else {
                showNotification('Please select at least one product to edit', false);
            }
        });
        
        document.getElementById('deleteSelectedBtn').addEventListener('click', function() {
            const selected = document.querySelectorAll('tbody input[type="checkbox"]:checked');
            if (selected.length > 0) {
                if (confirm(`Are you sure you want to delete ${selected.length} products?`)) {
                    showNotification(`${selected.length} products deleted successfully`);
                }
            } else {
                showNotification('Please select at least one product to delete', false);
            }
        });
        
        document.getElementById('saveChangesBtn').addEventListener('click', function() {
            showNotification('Changes saved to database');
        });
        
        document.getElementById('addProductBtn').addEventListener('click', function() {
            modal.style.display = 'flex';
            // Reset form for new product
            document.getElementById('editEan').value = '';
            document.getElementById('editSku').value = '';
            document.getElementById('editTitle').value = '';
            document.getElementById('editCost').value = '';
            document.getElementById('editResale').value = '';
            document.getElementById('editSupplier').selectedIndex = 0;
            document.getElementById('editFulfillment').value = '';
            document.getElementById('editCostDate').value = '';
            document.getElementById('editLastUpdated').value = new Date().toISOString().split('T')[0];
            document.getElementById('editLink').value = '';
        });
        
        document.getElementById('saveProductBtn').addEventListener('click', function() {
            modal.style.display = 'none';
            showNotification('Product saved successfully');
        });
    </script>
</body>
</html>
